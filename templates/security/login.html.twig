{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form style="margin: 100px;" method="post">
    {% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
    <div class="mb-3">
        Vous etes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se
            déconnecter</a>
    </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>
    <label style="margin-top: 20px;" for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
        autocomplete="email" required autofocus>
    <label style="margin-top: 20px;" for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password"
        required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button style="margin-top: 20px; background-color: rgba(0, 0, 0, 0.8);" class="get-started-btn scrollto"
        type="submit">
        Valider
    </button>
</form>
{% endblock %}